/dts-v1/;
#include <st/f4/stm32f407Xg.dtsi>
#include <st/f4/stm32f407i(e-g)hx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "DJI RoboMaster Development Board C";
	compatible = "st";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,dtcm = &ccm0;
		can1 = &can1;
		can2 = &can2;
	};

	pwmleds: pwmleds {
		compatible = "pwm-leds";
		status = "okay";

		pwm_blue_led: blue_led {
			pwms = <&pwm5 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "Blue LED";
		};

		pwm_green_led: green_led {
			pwms = <&pwm5 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "Green LED";
		};

		pwm_red_led: red_led {
			pwms = <&pwm5 3 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "Red LED";
		};
	};

	pixel_led: pixel_led {
		compatible = "led-pixel-pwm";
		red-led = <&pwm_red_led>;
		green-led = <&pwm_green_led>;
		blue-led = <&pwm_blue_led>;
	};

	aliases {
		volt-sensor0 = &vref;
		volt-sensor1 = &vbat;
	};

};

&clk_lsi {
	status = "okay";
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(12)>;
	status = "okay";
};

&pll {
	div-m = <6>;
	mul-n = <168>;
	div-p = <2>;
	div-q = <7>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(168)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <4>;
	apb2-prescaler = <2>;
	status = "okay";
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pb7>;
	pinctrl-names = "default";
	current-speed = <115200>;
	dmas = <&dma2 7 4 (STM32_DMA_PERIPH_TX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>,
		   <&dma2 5 4 (STM32_DMA_PERIPH_RX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>;
	dma-names = "tx", "rx";
	status = "okay";
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pc10 &usart3_rx_pc11>;
	pinctrl-names = "default";
	current-speed = <100000>;
	dmas = <&dma1 3 4 (STM32_DMA_PERIPH_TX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>,
		   <&dma1 1 4 (STM32_DMA_PERIPH_RX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>;
	dma-names = "tx", "rx";
	status = "okay";
};

&usart6 {
	pinctrl-0 = <&usart6_tx_pg14 &usart6_rx_pg9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	dmas = <&dma2 6 5 (STM32_DMA_PERIPH_TX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>,
		   <&dma2 2 5 (STM32_DMA_PERIPH_RX | STM32_DMA_PRIORITY_HIGH) STM32_DMA_FIFO_HALF>;
	dma-names = "tx", "rx";
	status = "okay";
};

&rtc {
	clocks = <&rcc STM32_CLOCK_BUS_APB1 0x10000000>,
			 <&rcc STM32_SRC_LSI RTC_SEL(2)>;
	status = "okay";

	backup_regs {
		status = "okay";
	};
};

zephyr_udc0: &usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
	status = "okay";

	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "Zephyr USB CDC-ACM";
	};
};

&can1 {
	pinctrl-0 = <&can1_rx_pd0 &can1_tx_pd1>;
	bitrate = <1000000>;
	sample-point = <875>;
	pinctrl-names = "default";
	status = "okay";
};

&can2 {
	pinctrl-0 = <&can2_rx_pb5 &can2_tx_pb6>;
	bitrate = <1000000>;
	sample-point = <875>;
	pinctrl-names = "default";
	status = "okay";
};

&adc1 {
	st,adc-prescaler = <4>;
	status = "okay";
};

&die_temp {
	status = "okay";
};

&vref {
	status = "okay";
};

&vbat {
	status = "okay";
};

&dma1 {
	status = "okay";
};

&dma2 {
	status = "okay";
};

&spi1 {
	pinctrl-0 = <&spi1_sck_pb3 &spi1_miso_pb4 &spi1_mosi_pa7>;
	pinctrl-names = "default";
	status = "okay";
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>, <&gpiob 0 GPIO_ACTIVE_LOW>;

	bmi088_accel: bmi088_accel@0 {
		compatible = "bosch,bmi08x-accel";
		reg = <0>;
		spi-max-frequency = <10000000>;
		int-gpios = <&gpioc 4 GPIO_ACTIVE_HIGH>;
		accel-hz = "800";
		accel-fs = <4>;

		int1-map-io = <0x01>; /* 将数据就绪中断映射到INT1 */
		int1-conf-io = <0x0A>; /* 设置INT1为推挽输出和有效高电平 */
		int2-map-io = <0x00>;
		int2-conf-io = <0x17>;

		data-sync = <&bmi088_gyro>;
	};

	bmi088_gyro: bmi088_gyro@1 {
		compatible = "bosch,bmi08x-gyro";
		reg = <1>;
		spi-max-frequency = <10000000>;
		int-gpios = <&gpioc 5 GPIO_ACTIVE_HIGH>;
		gyro-hz = "1000_116";
		gyro-fs = <1000>;

		int3-4-map-io = <1>; /* 将数据就绪中断映射到INT3 */
		int3-4-conf-io = <1>; /* 设置INT3为有效高电平和推挽输出 */

		data-sync;
	};
};

&timers4 {
	status = "okay";
	st,prescaler = <167>;

	pwm4: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch3_pd14>;
		pinctrl-names = "default";
	};
};

&timers5 {
	status = "okay";
	st,prescaler = <167>;

	pwm5: pwm {
		status = "okay";
		pinctrl-0 = <&tim5_ch3_ph12 &tim5_ch2_ph11 &tim5_ch1_ph10>;
		pinctrl-names = "default";
	};
};

&timers10 {
	status = "okay";
	st,prescaler = <167>;

	pwm10: pwm {
		status = "okay";
		pinctrl-0 = <&tim10_ch1_pf6>;
		pinctrl-names = "default";
	};
};

/ {
	pwm_heater: pwm-heater {
		compatible = "pwm-heater";
		pwms = <&pwm10 1 PWM_USEC(100) PWM_POLARITY_NORMAL>;
		temp-sensor = <&bmi088_accel>;
		temp-channel = <12>; /* SENSOR_CHAN_DIE_TEMP */
		status = "okay";
	};
};

/ {
	pwm_buzzer: pwm-buzzer {
		compatible = "pwm-buzzer";
		pwms = <&pwm4 3 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
		base-frequency-hz = <440>;
		status = "okay";
	};
};
