/ {
	aliases {
		led0 = &led0;
		led1 = &led1;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 0 0>;
			label = "Test LED 0";
		};
		led1: led_1 {
			gpios = <&gpio0 1 0>;
			label = "Test LED 1";
		};
	};

	status_leds: status-leds {
		compatible = "status-leds";
		leds = <&leds>;
		heartbeat-led-index = <0>;
		error-led-index = <1>;
	};
};